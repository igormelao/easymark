<%= form_for @mark, html: {class: "col s12 update_mark"} do |f| %>
  <div class="mark">
    <div class="row cards">
      <div class="col s8 offset-s2">
        <div class="card horizontal">
          <div class="card-content col s12">
            <div class="row">
              <div class="row">
                <%= hidden_field_tag 'id_store', @store.id %>
                <div class="col s12 l9 input-field">
                  <%= f.text_field :name, 'data-length': "20" %>
                  <label for="name" class="<%= (@mark.name)? 'active' : '' %>">Nome da Meta</label>
                </div>
              </div>
              <div class="row">
                <div class="col s12 l3 input-field">
                  <%= f.date_field :month, class: "datepicker" %>
                  <label for="month" class="active">Mês referência</label>
                </div>
              </div>
              <div class="row">
                <div class="col s12 l3 input-field">
                   <%= f.date_field :start_date, class: "datepicker" %>
                  <label for="start_date" class="active">Data de início</label>
                </div>
                <div class="col s12 l3 input-field">
                  <%= f.date_field :end_date, class: "datepicker" %>
                  <label for="end_date" class="active">Data final</label>
                </div>
              </div>
              <div class="row">
                <div class="col s12 l2 input-field">
                  <%= f.number_field :value, in: 0.0..1_000_000_000.0, step: 0.01 %>
                  <label for="value" class="<%= (@mark.value)? 'active' : '' %>">Valor</label>
               </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
   <div class="col s12 center">
     <div class="col s6">
       <%= f.button type: "submit", id: "cadastrar", class: "btn waves-effect waves-light blue", role: "button" do %>
         <i class="material-icons left">save</i>Salvar
       <% end %>
     </div>
     <div class="col s6">
       <a href="/stores" class= "waves-effect waves-light btn blue">
         <i class="material-icons left">arrow_back</i>Voltar
       </a>
     </div>
   </div>
  </div>
<% end %>
