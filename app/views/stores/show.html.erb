<div class="row stores">

  <div class="col s8 offset-s2">
    <p class="title"><%= @store.name %></p>
  </div>

  <div class="col s8 offset-s2">
    <p class="title">Vendedores</p>
  </div>

  <div class="store">
    <div class="row cards">
      <div class="col s8 offset-s2">
        <div class="card horizontal">
          <div class="card-content col s12">
              <div class="row">
                <% @store.sellers.each do |seller| %>
                  <div class="row">
                    <div class="col s12 l4">
                        <p><%= seller.name %></p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col s8 offset-s2">
      <p class="title">Metas</p>
    </div>


    <div class="row btn-actions">
     <div class="col s12 center">
       <div class="col s12">
         <a href="/stores" class= "waves-effect waves-light btn blue">
           <i class="material-icons left">arrow_back</i>
           Voltar
         </a>
       </div>
     </div>
    </div>


</div>
