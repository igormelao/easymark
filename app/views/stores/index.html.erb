<div class="row stores">
  <div class="col s8 offset-s2">
    <p class="title">Lojas</p>
  </div>

  <div class="row cards">
    <div class="col s8 offset-s2">
      <% if !@stores.empty? %>
        <% @stores.each do |s| %>
          <div class="card horizontal">
            <div class="card-content col s12">
              <div class="col s12 l8 m12">
                <div class="row">
                  <div class="col s8 m9 l9">
                    <p class="title"><%= truncate(s.name, length: 30, omission: '...') %></p>
                  </div>
                </div>
              </div>
              <div class="col l4 s12 m12 center enter">
                <div class="row">
                  <div class="col s12">
                    <a class="waves-effect waves-light btn blue" href=<%= "/stores/#{s.id}" %>>Entrar</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p>Você ainda não possui nenhuma loja cadastrada!</p>
      <% end %>
    </div>
  </div>

  <div class="fixed-action-btn stores-btn">
    <%= form_tag("/stores", method: "post") do %>
      <button class="btn-floating btn-large blue pulse" type="submit">
        <i class="large material-icons">add</i>
      </button>
    <% end %>
  </div>


</div>
